<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.loicjermann.schrittzaehler.MainActivity">


    <Button
        android:id="@+id/btnQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Scan"
        android:layout_below="@+id/lblSteps"
        android:layout_toStartOf="@+id/lblSteps" />

    <TextView
        android:id="@+id/lblQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblQr2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <Button
        android:id="@+id/btnEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ende"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/lblSteps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lblSteps"
        android:layout_above="@+id/btnEnd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="190dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblQr2"
        android:layout_above="@+id/btnEnd"
        android:layout_toStartOf="@+id/btnEnd"
        android:layout_marginBottom="77dp" />

</RelativeLayout>
